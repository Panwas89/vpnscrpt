  echo -e "              ${ORANGE}USERNAME${NC}"
  echo -e " ${TEAL}————————————————————————————————————${NC}"
  grep -E "^### " "/etc/xray/.userall.db" | cut -d ' ' -f 2-3 | sort | uniq | while read -r user exp; do
  printf "  %-28s %s\n" "$user"  # Rata menggunakan printf
  done
  echo -e " ${TEAL}————————————————————————————————————${NC}"
