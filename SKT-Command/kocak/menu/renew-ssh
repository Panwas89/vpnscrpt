#!/bin/bash
clear

# Warna untuk tampilan menu
# Mendefinisikan warna untuk pesan
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
BIRU='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
CYAN_BG='\033[46;1;97m'   # Latar belakang cyan cerah dengan teks putih
LIGHT='\033[0;37m'
PINK='\033[0;35m'
ORANGE='\033[38;5;208m'
PINK_BG='\033[45;1;97m'
BIRU_BG='\033[44;1;97m'
RED_BG='\033[41;1;97m'   # Latar belakang pink cerah dengan teks putih
NC='\033[0m'
INDIGO='\033[38;5;54m'
TEAL='\033[38;5;30m'
WHITE='\033[1;37m'

red() { echo -e "\\033[31;1m${*}\\033[0m"; }
green() { echo -e "\\033[32;1m${*}\\033[0m"; }

# Bot settings
CHATID=$(grep -E "^#bot# " "/etc/bot/.bot.db" | cut -d ' ' -f 3)
KEY=$(grep -E "^#bot# " "/etc/bot/.bot.db" | cut -d ' ' -f 2)
export TIME="10"
export URL="https://api.telegram.org/bot$KEY/sendMessage"

# Menu utama
main_menu() {
  clear
  echo -e " ${TEAL}====================================================${NC}"
  echo -e "            ðŸš€ Renew SSH Account Menu ðŸš€"
  echo -e " ${TEAL}====================================================${NC}"
  echo ""
  echo -e " ${YELLOW}1.${WHITE} Lihat Daftar Username SSH${NC}"
  echo -e " ${YELLOW}2.${WHITE} Perpanjang Akun SSH berdasarkan Username${NC}"
  echo -e " ${YELLOW}x.${RED} Keluar dari menu ini...${NC}"
  echo ""
  echo -e " ${TEAL}====================================================${NC}"
  echo ""
  read -p " âž£ Your Choice: " pilihan

  case $pilihan in
    1)
      show_user_list
      ;;
    2)
      renew_ssh_account
      ;;
    x)
      clear
      echo -e "${RED}Sampai bertemu lagi...ðŸ‘‹${NC}"
      menu
      ;;
    *)
      red "âš ï¸ Pilihan tidak valid! Silakan coba lagi."
      sleep 2
      main_menu
      ;;
  esac
}

# Fungsi untuk menampilkan daftar username dengan expired date
show_user_list() {
  clear
  echo -e " ${TEAL}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
  echo -e "            ðŸ“œ${PURPLE} List Member SSH ${NC}ðŸ“œ"
  echo -e " ${TEAL}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"

  # Cetak Header Tabel
  printf " ${YELLOW}%-17s${NC} ${RED}%-17s${NC} ${YELLOW}%-17s${NC}\n" "USERNAME" "EXP DATE" "STATUS"
  echo -e " ${TEAL}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"

  # Loop untuk membaca daftar dari database
  while read -r line; do
    username=$(echo $line | awk '{print $2}')
    if id "$username" &> /dev/null; then
      exp_date=$(chage -l "$username" | grep "Account expires" | awk -F": " '{print $2}')
    else
      exp_date="Akun Tidak Ada"
    fi

    # Periksa status dan cetak dengan printf
    if [[ "$exp_date" == "Akun Tidak Ada" ]]; then
      printf " %-17s %-17s \033[31m%-17s\033[0m\n" "$username" "$exp_date" "Tidak Aktif"
    else
      printf " %-17s %-17s \033[32m%-17s\033[0m\n" "$username" "$exp_date" "Aktif"
    fi
  done < <(grep "^#ssh#" /etc/ssh/.ssh.db)

  echo -e " ${TEAL}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\033[0m"
  echo ""
  read -p "Tekan Enter untuk kembali ke menu utama..."
  main_menu
}


# Fungsi untuk memperpanjang akun berdasarkan username
renew_ssh_account() {
  clear
  echo -e " ${CYAN}============================================================${NC}"
  echo -e "       ðŸ”§ Perpanjangan Akun SSH Berdasarkan Username ðŸ”§"
  echo -e " ${CYAN}============================================================${NC}"
  echo ""
  read -p " âž¥ Masukkan Username yang ingin diperpanjang: ${green}" Login
  if ! grep -qw "^#ssh# ${Login}" /etc/ssh/.ssh.db; then
    red "âŒ Username ${Login} tidak ditemukan dalam database SSH!"
    read -p "Tekan Enter untuk kembali ke menu utama..."
    main_menu
  fi

  # Input masa aktif baru
  read -p " âž¥ Masukkan masa aktif baru (days): ${green}" masaaktif
  expired_date=$(chage -l $Login | grep "Account expires" | awk -F": " '{print $2}')

  if [ "$expired_date" == "never" ] || [ -z "$expired_date" ]; then
    red " âŒ Tidak ada tanggal kadaluarsa yang valid!"
    read -p " Tekan Enter untuk kembali ke menu utama..."
    main_menu
  fi

  new_expired_seconds=$(date -d "$expired_date" +%s)
  new_expired_seconds=$((new_expired_seconds + masaaktif * 24 * 3600))
  new_expired_date=$(date -d "@$new_expired_seconds" +"%Y-%m-%d")

  # Perbarui akun
  clear
  usermod -e "$new_expired_date" $Login
  if [ $? -eq 0 ]; then
    echo -e " ${TEAL}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
    echo -e "  Perpanjangan Masa Aktif Akun SSH Berhasil           "
    echo -e " ${TEAL}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}" 
    echo -e ""
    echo -e "    Username   : $Login"
    echo -e "    Expires on : $new_expired_date"
    echo -e ""
    echo -e " ${TEAL}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
  else
    red " âŒ Gagal memperpanjang masa aktif akun SSH!..."
  fi
  read -p " Tekan Enter untuk kembali ke menu utama..."
  main_menu
  
}

# Jalankan menu utama
main_menu
