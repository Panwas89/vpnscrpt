    for s in "${spinner[@]}"; do
      echo -ne "\r\033[1;33m[$s] Process Create Trial Account... \033[0m"
      sleep 0.1
    done
  done

  # Tampilkan pesan sukses
  clear
  echo -e "\033[1;32m🎉 The process completed successfully! ✅\033[0m"
  sleep 1
  clear
}
